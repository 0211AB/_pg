<%- include('includes/head.ejs') %>
    <title>CORNERSTONE</title>
    <link rel="stylesheet" href="css/profile.css" />
    </head>

    <body>
        <!-- Header -->
        <header id="home" class="header">
            <%- include('includes/nav.ejs') %>

                <!-- Homepage Banner(Hero) -->
                <img src="./images/banner1.png" alt="" class="hero-img" />

                <div class="hero-content">
                    <h2>Home Away From Home </h2>
                    <h1>
                        <span>CORNERSTONE</span>
                    </h1>
                    <a class="btn" href="pgs">PGs</a>
                    <a class="btn" href="flats">Flats</a>
                </div>
        </header>

        <!-- Why choose us -->
        <section class="services" id="padding">

            <div class="title">
                <h1>Why Choose Us</h1>
            </div>

            <div class="box-container">

                <div class="box">
                    <img src="images/1.jpeg" alt="">
                </div>

                <div class="box">
                    <img src="images/2.jpeg" alt="">
                </div>

                <div class="box">
                    <img src="images/3.jpeg" alt="">
                </div>

            </div>
        </section>

        <!-- Featured PGS-->
        <section class="section featured">
            <div class="title">
                <h1>PGs</h1>
            </div>

            <div class="product-center container">
                <% products.forEach((product)=>{ %>
                    <div class="product">
                        <div class="product-header">
                            <img src="<%= product.pic1 %>" alt="">
                        </div>
                        <div class="product-footer">
                            <h3>CornerDig <%= product.idofpg %>&nbsp; <span>
                                        <%= product.gender %>
                                    </span>

                            </h3>
                            <div id="price">
                                Rs<%=product.tocost %> onwards<br><br>
                                    <%= product.distancefromjusl %> mins from JU Salt Lake Campus <br>
                                        <%= product.distancefromtechno %> mins from Techno India <br>
                                            <%= product.distancefromiem %> mins from IEM
                            </div>
                            <form action="pgdetails" method="post"><span><input class="hidden"
                                        value="<%= product._id %>" name="id"></span><button type="submit"
                                    class="btn">Details</a></form>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div id="center">
                <a class="btn" href="pgs">All PGs</a>
            </div>

        </section>

        <!--Flats -->
        <section class="section featured" id="padding">
            <div class="title">
                <h1>Flats</h1>
            </div>

            <div class="box-container">

                <% flats.forEach((flat)=>{ %>
                    <div class="box">
                        <div class="image-container">
                            <img src="<%= flat.pic1 %>" alt="" srcset="">
                            <ul class="icons">
                                <form action="flatdetails" method="post">
                                    <input type="hidden" name="id" value="<%= flat._id %>">
                                    <input type="submit" class="btn" value="More Images">
                                </form>
                            </ul>
                        </div>
                        <div class="content">
                            <div class="price">
                                <h3>Rs<%=flat.Cost %>/mo</h3>
                            </div>
                            <div class="location">
                                <h3>CornerDen <%=flat.idofflat %>
                                </h3>
                                <p>
                                    <%=flat.distancefromjusl %> mins distance from JUSL
                                </p>
                                <p>
                                    <%=flat.distancefromiem %> mins distance from IEM
                                </p>
                                <p>
                                    <%=flat.distancefromtechno %> mins distance from TECHNO INDIA
                                </p>
                            </div>
                            <div class="details">
                                <h3> <i class="fas fa-expand"></i>
                                    <%=flat.floor %> Floor
                                </h3>
                                <h3> <i class="fas fa-bed"></i>
                                    <%=flat.bhk %>
                                </h3>
                            </div>
                            <div class="buttons">
                                <a href="https://wa.me/message/XMULBPYDLI5UP1" class="btn">Whatsapp</a>
                                <a href="tel:+91-8100358606" class="btn">Call</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div id="center">
                <a class="btn" href="flats">All Flats</a>
            </div>

        </section>

        <!-- Product Banner -->
        <section class="section">
            <div class="product-banner">
                <div class="left">
                    <img src="./images/banner1.jpg" alt="" />
                </div>
                <div class="right">
                    <div class="content">
                        <h2><span class="discount">Rs. 250</span> CASHBACK</h2>
                        <h1>
                            <span>Exclusive perks</span>
                            <span>if you signup</span>
                        </h1>
                    </div>
                </div>
            </div>
        </section>
        <%- include('includes/end.ejs') %>
        
<!-- GSAP -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
<!-- Custom Script -->
<script src="js/index.js"></script>
</body>

</html>