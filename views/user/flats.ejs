<%- include('includes/head.ejs') %>
    <title>Flats</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('includes/nav.ejs') %>
            <section class="section featured" id="padding">
                <div class="title">
                    <h1>Flats</h1>
                </div>

                <div class="box-container">

                    <% flats.forEach(function(flat){ %>
                        <div class="box">
                            <div class="image-container">
                                <img src="<%= flat.pic1 %>" alt="">
                                <ul class="icons">
                                    <form action="flatdetails" method="post">
                                        <input type="hidden" name="id" value="<%= flat._id %>">
                                        <input type="submit" class="btn" value="More Images">
                                    </form>
                                </ul>
                            </div>
                            <div class="content">
                                <div class="price">
                                    <h3>Rs<%=flat.Cost %>/mo</h3>
                                </div>
                                <div class="location">
                                    <h3>CornerDen <%=flat.idofflat %>
                                    </h3>
                                    <p>
                                        <%=flat.distancefromjusl %> mins distance from JUSL
                                    </p>
                                    <p>
                                        <%=flat.distancefromiem %> mins distance from IEM
                                    </p>
                                    <p>
                                        <%=flat.distancefromtechno %> mins distance from TECHNO INDIA
                                    </p>
                                </div>
                                <div class="details">
                                    <h3> <i class="fas fa-expand"></i>
                                        <%=flat.floor %> Floor
                                    </h3>
                                    <h3> <i class="fas fa-bed"></i>
                                        <%=flat.bhk %>
                                    </h3>
                                </div>
                                <div class="buttons">
                                    <a href="https://wa.me/message/XMULBPYDLI5UP1" class="btn">Whatsapp</a>
                                    <a href="tel:+91-8100358606" class="btn">Call</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </section>
            <%- include('includes/end.ejs') %>

                <!-- GSAP -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
                <!-- Custom Script -->
                <script src="js/index.js"></script>
    </body>

    </html>